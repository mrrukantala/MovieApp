<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8dp"
    android:elevation="@dimen/_8dp"
    app:cardCornerRadius="@dimen/_12dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_shimmer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/tvTitle"
            android:layout_width="@dimen/_120dp"
            android:layout_height="@dimen/_20dp"
            android:layout_marginHorizontal="@dimen/_8dp"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.3" />

        <View
            android:id="@+id/tvGenreTitle"
            android:layout_width="@dimen/_120dp"
            android:layout_height="@dimen/_20dp"
            android:layout_marginHorizontal="@dimen/_8dp"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:text="Genre" />

        <View
            android:id="@+id/tvDateRelase"
            android:layout_width="@dimen/_120dp"
            android:layout_height="@dimen/_20dp"
            android:layout_marginHorizontal="@dimen/_8dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/tvGenreTitle"
            tools:text="Genre" />

        <TextView
            android:id="@+id/tvRatingLabel"
            android:layout_width="@dimen/_80dp"
            android:layout_height="@dimen/_20dp"
            android:layout_marginHorizontal="@dimen/_8dp"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/tvDateRelase" />

        <TextView
            android:id="@+id/tvRatingValue"
            android:layout_width="@dimen/_20dp"
            android:layout_height="@dimen/_20dp"
            android:layout_marginHorizontal="@dimen/_8dp"
            android:layout_marginStart="@dimen/_8dp"
            android:background="@drawable/bg_shimmer"
            app:layout_constraintStart_toEndOf="@+id/tvRatingLabel"
            app:layout_constraintTop_toTopOf="@+id/tvRatingLabel" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>